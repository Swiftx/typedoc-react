{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "jsx": "react",
        "outDir": "./build/",
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}